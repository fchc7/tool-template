{
  "name": "tool-template",
  "version": "1.0.0",
  "description": "A TypeScript tool library template with modern development setup",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "README_EN.md"
  ],
  "scripts": {
    "dev": "concurrently --prefix \"[{name}]\" --names \"build,test,types\" -c \"blue,green,yellow\" \"pnpm:dev:build\" \"pnpm:dev:test\" \"pnpm:dev:typecheck\"",
    "dev:build": "rollup -c rollup.config.mjs --watch",
    "dev:test": "vitest --watch",
    "dev:typecheck": "tsc --noEmit --watch --preserveWatchOutput",
    "build": "rollup -c rollup.config.mjs",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint --config eslint.config.mjs src",
    "lint:fix": "eslint --config eslint.config.mjs src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "release": "pnpm run build && pnpm run changelog && pnpm publish",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "keywords": [
    "typescript",
    "tools",
    "library",
    "template"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/tool-template.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/tool-template/issues"
  },
  "homepage": "https://github.com/your-username/tool-template#readme",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "concurrently": "^8.2.2",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.1",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
